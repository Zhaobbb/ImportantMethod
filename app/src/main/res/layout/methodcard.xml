<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:id="@+id/method_card_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/eee"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/methodcard_title"
        android:text="那些你不知道的亲子手工活儿"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp">
    <ImageView

        android:src="@drawable/icon_topic_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/method_card_sawnum"
            android:text="666"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_topic_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/method_card_likenum"
            android:text="666"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>