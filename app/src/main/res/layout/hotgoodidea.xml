<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fensexiaoshugang"
            android:layout_width="4dp"
            android:layout_height="30dp"


            android:background="#FDAFB3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="热门妙招"

            android:textSize="15sp" />

    </LinearLayout>

    <com.example.joker.importantmethod.View.CustomGridview
        android:numColumns="2"
        android:horizontalSpacing="4dp"
        android:verticalSpacing="4dp"
        android:id="@+id/hot_idea_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.joker.importantmethod.View.CustomGridview>
</LinearLayout>